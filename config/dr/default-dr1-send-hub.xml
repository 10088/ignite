<!--
    GridGain configuration for data center replication sender hub.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!--
        Optional description.
    -->
    <description>
        GridGain data center replication sender hub configuration.
    </description>

    <!--
        Import common configuration.
    -->
    <import resource="default-dr1-base.xml"/>

    <!--
        Configuration below demonstrates how to setup data center replication sender hub.
    -->
    <bean id="grid.cfg" parent="cfgBase" scope="singleton">
        <!-- Example of how to configure sender hub. -->
        <property name="drSenderHubConfiguration">
            <bean class="org.gridgain.grid.dr.hub.sender.GridDrSenderHubConfiguration">
                <!-- Cache names this sender hub works with -->
                <property name="cacheNames">
                    <list>
                        <value>drCache</value>
                    </list>
                </property>

                <!-- List of data centers this sender hub communicates with. -->
                <property name="connectionConfiguration">
                    <list>
                        <bean class="org.gridgain.grid.dr.hub.sender.GridDrSenderHubConnectionConfiguration">
                            <!-- Remote data center ID. -->
                            <property name="dataCenterId" value="2"/>

                            <!-- Local host sender hub is bound to. -->
                            <property name="localOutboundHost" value="127.0.0.1"/>

                            <!-- List of remote receiver hubs' addresses. -->
                            <property name="receiverHubAddresses">
                                <list>
                                    <value>127.0.0.1:49010</value>
                                    <!--
                                    <value>IP_ADDRESS:PORT</value>
                                    -->
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>

                <!-- Sender hub persistent store configuration. -->
                <property name="store">
                    <bean class="org.gridgain.grid.dr.store.fs.GridDrFsStore">
                        <property name="directoryPath" value="work/dr/store1"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
</beans>
