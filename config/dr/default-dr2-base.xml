<!--
    Base configuration for grid participating in data center replication.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!--
        Optional description.
    -->
    <description>
        Common configuration for sample data center replication configuration.
    </description>

    <!--
        Base configuration for grid participating in data center replication.
    -->
    <bean id="cfgBase" class="org.gridgain.grid.GridConfiguration" abstract="true">
        <!-- Data center ID must be set for grid participating in data center replication. -->
        <property name="dataCenterId" value="2"/>

        <!-- Discovery configuration. -->
        <property name="discoverySpi">
            <bean class="org.gridgain.grid.spi.discovery.tcp.GridTcpDiscoverySpi">
                <property name="ipFinder">
                    <bean class="org.gridgain.grid.spi.discovery.tcp.ipfinder.multicast.GridTcpDiscoveryMulticastIpFinder">
                        <property name="multicastPort" value="47402"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
</beans>
