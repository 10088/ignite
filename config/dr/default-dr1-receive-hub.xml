<!--
    GridGain configuration for data center replication receiver hub.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!--
        Optional description.
    -->
    <description>
        GridGain data center replication receiver hub configuration.
    </description>

    <!--
        Import common configuration.
    -->
    <import resource="default-dr1-base.xml"/>

    <!--
        Configuration below demonstrates how to setup data center replication receiver hub.
    -->
    <bean id="grid.cfg" parent="cfgBase" scope="singleton">
        <!-- Example of how to configure receiver hub. -->
        <property name="drReceiverHubConfiguration">
            <bean class="org.gridgain.grid.dr.hub.receiver.GridDrReceiverHubConfiguration">
                <!-- Local host receiver hub is bound to. -->
                <property name="localInboundHost" value="127.0.0.1"/>

                <!-- Local port receiver hub is bound to. -->
                <property name="localInboundPort" value="49000"/>
            </bean>
        </property>
    </bean>
</beans>
